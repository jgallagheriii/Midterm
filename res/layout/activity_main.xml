<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    tools:context="com.example.midterm.MainActivity" >

    <ImageView
        android:id="@+id/carView"
        android:layout_width="131dp"
        android:layout_height="99dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:src="@drawable/midtermcar" />

    <TextView
        android:id="@+id/mpgTextView"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="@string/mpg"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/mpgDisplayText"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/mpgEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:digits="0123456789"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/gasPriceTextView"
        android:layout_gravity="left"
        android:text="@string/gas_prices"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/gasPriceDisplayText"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/gasPriceEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:digits="0123456789"
        android:inputType="number" />

    <TextView
        android:id="@+id/milesDrivenTextView"
        android:layout_gravity="left"
        android:text="@string/miles_driven"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/milesDrivenDisplayText"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/milesDrivenEditText"
        android:layout_column="1"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_gravity="left"
        android:text="@string/total"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/totalDisplayText"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</GridLayout>
